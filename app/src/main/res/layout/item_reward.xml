<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <ImageView
        android:id="@+id/box"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:src="@drawable/rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toTopOf="parent">
    </ImageView>

    <TextView
        android:id="@+id/box_brand"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="@id/box"
        app:layout_constraintTop_toTopOf="@id/box"

        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"

        android:text="Coca-cola"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/box_cost"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toStartOf="@id/cost_suffix"
        app:layout_constraintTop_toTopOf="@id/box_brand"

        android:layout_marginEnd="2dp"

        android:text="20"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/cost_suffix"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toEndOf="@id/box"
        app:layout_constraintTop_toTopOf="@id/box_brand"

        android:layout_marginEnd="10dp"

        android:text="@string/reward_cost_suffix"
        android:textSize="20sp"/>


    <TextView
        android:id="@+id/box_description"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        app:layout_constraintTop_toBottomOf="@id/box_brand"
        app:layout_constraintStart_toStartOf="@id/box_brand"


        android:text="One fresh can of cola !"
        />

</androidx.constraintlayout.widget.ConstraintLayout>