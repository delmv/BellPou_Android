<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/register_first_name_text"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/register_first_name"
        app:layout_constraintBottom_toBottomOf="@id/register_first_name"


        android:text="@string/register_first_name_text" />

    <EditText
        android:id="@+id/register_first_name"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toEndOf="@id/register_first_name_text"
        app:layout_constraintTop_toTopOf="parent"

        android:hint="@string/register_first_name_hint" />

</androidx.constraintlayout.widget.ConstraintLayout>